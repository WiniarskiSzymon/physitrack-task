{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "types": ["node", "webdriverio/async", "@wdio/mocha-framework", "expect-webdriverio", "@types/mocha"]
  },
  "include": [
    "pages/*.ts",
    "tests/**/*.ts",
    "utils/*.ts",
    "configs/*.ts"
, "pages/excercieses/excercises.demo.page.ts"  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}